<h1>Listing houses</h1>

<p><%= @markers %></p>

<%= gmaps({
  "direction" => {
    "data" => {"from" => "San Francisco, CA", "to" => "San Diego, CA"}
  },
  "markers" => {"data" => @markers}
}) %>

<table>
  <tr>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @houses.each do |house| %>
  <tr>
    <td><%= house.address %></td>
    <td><%= house.latitude %></td>
    <td><%= house.longitude %></td>
    <td><%= link_to 'Show', house %></td>
    <td><%= link_to 'Edit', edit_house_path(house) %></td>
    <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New House', new_house_path %>
